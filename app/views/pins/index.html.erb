<div class="jumbotron">
  <p id="notice"><%= notice %></p>

  <h1>Pintresting</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pins.each do |pin| %>
        <tr>
          <th><%= image_tag pin.image.url(:medium) %></th>
          <h5><%= pin.user.email if pin.user %></h5>
          <h4>-<%= pin.description %>-</h4>
          <h9><%= link_to 'Show', pin %></h9>
          <% if pin.user == current_user %>
          <h9><%= link_to 'Edit', edit_pin_path(pin) %></h9>
          <h9><%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Have mercy!' } %></h9>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <% if user_signed_in? %>
    <%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
  <% else %>
    <h4> <%= link_to "Click here", new_user_session_path %> to create a pin! </h4>
  <% end %>
</div>