<div class="jumbotron">
  <p id="notice"><%= notice %></p>

  <h1>Pintresting</h1>

  <table>
    <thead>
      <tr>
        <h2>Descriptions of Pins:</h2>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pins.each do |pin| %>
        <tr>
          <h3>-<%= pin.description %>-</h3>
          <h6><%= link_to 'Show', pin %></h6>
          <h6><%= link_to 'Edit', edit_pin_path(pin) %></h6>
          <h6><%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Have mercy!' } %></h6>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
</div>